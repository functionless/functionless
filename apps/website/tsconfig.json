    },
    {
      "path": "../../packages/@functionless/aws-appsync-constructs"
    },
    {
      "path": "../../packages/@functionless/aws-cognito-constructs"
    },
    {
      "path": "../../packages/@functionless/aws-dynamodb"
    },
    {
      "path": "../../packages/@functionless/aws-dynamodb-constructs"
    },
    {
      "path": "../../packages/@functionless/aws-events"
    },
    {
      "path": "../../packages/@functionless/aws-events-constructs"
    },
    {
      "path": "../../packages/@functionless/aws-lambda"
    },
    {
      "path": "../../packages/@functionless/aws-lambda-constructs"
    },
    {
